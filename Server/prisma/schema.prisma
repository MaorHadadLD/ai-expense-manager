datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  passwordHash String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  expenses     Expense[]
   incomes      Income[]
}

model Expense {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  amount      Float
  description String?
  category    String
  date        DateTime
  source      String   @default("manual")
  createdAt   DateTime @default(now())
}

model Incomes {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int

  amount    Float
  source    String   @default("salary")  
  date      DateTime

  createdAt DateTime @default(now())
}

