datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           Int          @id @default(autoincrement())
  name         String
  email        String       @unique
  passwordHash String
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  expenses     Expense[]
  incomes      Income[]
  savingGoals  SavingGoal[]
}

model Expense {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  amount      Float
  description String?
  category    String
  date        DateTime
  source      String   @default("manual")
  createdAt   DateTime @default(now())
}

model Income {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int

  amount Float
  source String   @default("salary")
  date   DateTime

  createdAt DateTime @default(now())
}

model SavingGoal {
  id        Int             @id @default(autoincrement())
  userId    Int
  user      User            @relation(fields: [userId], references: [id])
  name      String
  target    Float
  color     String?
  icon      String?
  createdAt DateTime        @default(now())
  deposits  SavingDeposit[]
}

model SavingDeposit {
  id     Int        @id @default(autoincrement())
  goalId Int
  goal   SavingGoal @relation(fields: [goalId], references: [id])

  incomeId Int?
  amount   Float
  date     DateTime @default(now())
}
